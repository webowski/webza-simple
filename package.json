{
	"name": "webza-simple",
	"version": "1.0.0",
	"description": "",
	"author": "webowski",
	"license": "ISC",
	"scripts": {
		"styles": "mkdir -p dist/styles && NODE_ENV=production sass src/styles/bundle.scss | NODE_ENV=production postcss --config config/postcss.config.mjs > dist/styles/bundle.min.css",
		"scripts": "NODE_ENV=production esbuild src/scripts/bundle.js --bundle --outfile=dist/scripts/bundle.min.js --minify",
		"icons": "node config/generate-icons.mjs",
		"favicon": "node ./config/generate-favicon.mjs",
		"html": "node ./config/generate-html.mjs",
		"build": "npm run clean && npm run styles && npm run scripts && npm run html && npm run icons",
		"styles:dev": "sass styles/bundle.scss | postcss --config config/postcss.config.mjs > style.css",
		"scripts:dev": "esbuild scripts/bundle.js --bundle --outfile=scripts/bundle.min.js --sourcemap",
		"build:dev": "npm run styles:dev && npm run scripts:dev && npm run icons && npm run deps",
		"watch:styles": "chokidar 'styles/**/*.scss' '**/*.php' '**/*.js' --ignore 'node_modules' -c 'npm run styles'",
		"watch:scripts": "npm run scripts -- --watch",
		"watch:icons": "chokidar 'images/icons/*.svg' -c 'npm run icons'",
		"watch": "npm run watch:styles && npm run watch:scripts && npm run watch:icons",
		"serve": "node --no-deprecation ./node_modules/.bin/browser-sync start --proxy 'localhost' --files 'style.css, scripts/bundle.min.js, **/*.php'",
		"start": "npm-run-all --parallel watch:* serve",
		"clean": "rm -rf dist"
	},
	"browserslist": [
		"last 2 versions",
		"> 1%",
		"not dead",
		"not op_mini all",
		"not kaios > 0"
	],
	"devDependencies": {
		"@tailwindcss/postcss": "^4.1.12",
		"browser-sync": "^3.0.4",
		"chokidar-cli": "^3.0.0",
		"dotenv": "^17.2.1",
		"esbuild": "^0.25.9",
		"favicons": "^7.2.0",
		"globby": "^14.1.0",
		"handlebars": "^4.7.8",
		"npm-run-all": "^4.1.5",
		"postcss": "^8.5.6",
		"postcss-cli": "^11.0.1",
		"postcss-preset-env": "^10.3.1",
		"postcss-url": "^10.1.3",
		"sass": "^1.91.0",
		"svg-sprite": "^2.0.4",
		"tailwindcss": "^4.1.12"
	},
	"dependencies": {
		"gsap": "^3.13.0",
		"lenis": "^1.3.10",
		"lodash": "^4.17.21",
		"notyf": "^3.10.0",
		"nouislider": "^15.8.1",
		"swiper": "^11.2.10"
	}
}
