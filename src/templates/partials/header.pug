<header class="Header">
	<div class="Header__container">

		<a href="/" class="Logo Header__logo" aria-label="logo">
			img(src=require('~/images/logo.svg') alt="Webza")
		</a>

		<nav class="NavMain Header__nav">
			<ul>
				each item in data.nav
					<li class="NavMain__item#{item.url === currentUrl ? ' is-current' : ''}">
						<a href="#{item.url}">#{item.title}</a>
					</li>
			</ul>
		</nav>

		<button class="Button items-center gap-2 Header__search">
			+icon("search").w-4.h-4
			<span>Search</span>
		</button>

	</div>
</header>
